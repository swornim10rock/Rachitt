<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepageid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/all"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_chrome_reader_mode_white_48dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/rockImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@android:color/background_dark"
                    android:src="@drawable/rock" />

                <ImageView
                    android:id="@+id/classicalRockImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/rockImage"
                    android:background="@android:color/background_dark"
                    android:src="@drawable/classicalrock" />

                <ImageView
                    android:id="@+id/melodyImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/classicalRockImage"
                    android:background="@android:color/background_dark"
                    android:src="@drawable/meoldu" />

                <ImageView
                    android:id="@+id/bluesImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/melodyImage"
                    android:background="@android:color/background_dark"
                    android:src="@drawable/blues" />


            </RelativeLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>